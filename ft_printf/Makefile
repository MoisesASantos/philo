#  -----------------------------------------------------------------------------
#  -----------------------Declaracao de variaveis-------------------------------
#  -----------------------------------------------------------------------------

NAME = libftprintf.a

CC = cc

SRC = ft_printf.c ft_putchar.c ft_putstr.c ft_puthex.c ft_putptr.c ft_putnbr.c ft_putnbr_unsigned.c

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Wextra -Werror

AR = ar

#  -----------------------------------------------------------------------------
#  -------------------------Execucao_das_targets--------------------------------
#  -----------------------------------------------------------------------------

all: $(NAME)

$(NAME): $(OBJ)
	$(AR) rcs $(NAME) $(OBJ)

#  -----------------------------------------------------------------------------
#  ---------------------------------limpeza-------------------------------------
#  -----------------------------------------------------------------------------

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f libftprintf.a

re: fclean all

.PHONY: all clean fclean re
